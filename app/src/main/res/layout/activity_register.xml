<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".view.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DermoAlly"
        android:fontFamily="@font/poppinsbold"
        android:textSize="18sp"
        android:textColor="@color/background_blue"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/background_blue"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:text="Get Started now"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account or log in to explore about our app"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinsregular"
        android:textColor="@color/background_grey"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Username"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="start"
        android:layout_marginTop="30dp"
        android:textColor="@color/background_grey"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_username_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your username"
        android:paddingHorizontal="10dp"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12sp"
        android:background="@drawable/custom_edit_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Email"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_grey"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_email_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your email address"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_edit_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Password"
        android:fontFamily="@font/poppinsregular"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:textColor="@color/background_grey"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/et_password_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your password"
        android:paddingHorizontal="10dp"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edit_text"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Register"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsbold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginTop="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/background_grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="@color/background_grey"
            android:fontFamily="@font/poppinsregular"
            android:layout_weight="1"
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/background_grey"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/custom_bg_google"
        android:drawableLeft="@drawable/google"
        android:drawablePadding="10dp"
        android:paddingHorizontal="20dp"
        android:text="Continue with Google"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppinsbold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/poppinsregular"
            android:textSize="12sp"
            android:textColor="@color/background_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Log in"
            android:fontFamily="@font/poppinsbold"
            android:textSize="12sp"
            android:textColor="@color/background_blue"/>
    </LinearLayout>
</LinearLayout>