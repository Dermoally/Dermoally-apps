<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:background="@drawable/frame_home">

   <LinearLayout
       android:layout_width="200dp"
       android:padding="10dp"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/photo"
               android:layout_width="180dp"
               android:layout_height="180dp"
               android:background="@drawable/frame_transparent"/>
           <FrameLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/frame_new"
               android:paddingVertical="1dp"
               android:layout_margin="10dp"
               android:paddingHorizontal="15dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="New"
                   android:textSize="11sp"
                   android:layout_gravity="center"
                   android:fontFamily="@font/poppinsbold"
                   android:textColor="@color/white"/>
           </FrameLayout>
       </RelativeLayout>
       <TextView
           android:id="@+id/date"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="12 June 2024"
           android:textSize="11sp"
           android:layout_gravity="end"
           android:layout_marginEnd="8dp"
           android:layout_marginTop="8dp"
           android:fontFamily="@font/poppinsregular"
           android:textColor="@color/background_grey"/>
       <TextView
           android:id="@+id/disease"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Keratosis Seborrheic"
           android:textSize="12sp"
           android:layout_gravity="start"
           android:layout_marginStart="8dp"
           android:fontFamily="@font/poppinsbold"
           android:textColor="@color/black"/>
       <TextView
           android:id="@+id/accuracy"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="0%"
           android:textSize="11sp"
           android:layout_gravity="start"
           android:layout_marginStart="8dp"
           android:fontFamily="@font/poppinsbold"
           android:textColor="@color/black"/>
       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/seemore"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="See more"
           android:textAllCaps="false"
           android:fontFamily="@font/poppinsbold"
           android:textSize="12sp"
           android:textColor="@color/white"
           android:background="@drawable/custom_button"
           android:layout_marginTop="10dp"
           />
   </LinearLayout>
</FrameLayout>