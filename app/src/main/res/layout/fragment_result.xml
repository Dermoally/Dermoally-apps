<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ResultFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/resultImg"
        android:layout_width="415dp"
        android:layout_height="360dp"
        android:scaleType="centerCrop"
        android:src="@drawable/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="320dp"
            android:background="@drawable/frame_home">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/diseaseName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Penyakit"
                        android:fontFamily="@font/poppinsbold"
                        android:textSize="24sp"
                        android:textColor="@color/background_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/background_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Laborum quam voluptatem deserunt libero, minus debitis dolore vitae illo optio quidem animi hic, quas repudiandae molestiae facere. Lorem ipsum dolor sit amet consectetur adipisicing elit"
                        android:layout_marginTop="4dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/background_blue"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products Recomendation"
                        android:layout_marginTop="16dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/poppinsregular"
                        android:textColor="@color/background_blue"/>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <FrameLayout
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:background="@drawable/custom_product">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:id="@+id/productName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="@font/poppinsbold"
                                        android:text="Niacinamide"
                                        android:textColor="@color/background_blue"
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/productImg" />

                                    <ImageView
                                        android:id="@+id/productImg"
                                        android:layout_width="131dp"
                                        android:layout_height="85dp"
                                        android:layout_marginTop="8dp"
                                        android:src="@drawable/product"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </FrameLayout>



                            <FrameLayout
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/custom_product">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="@font/poppinsbold"
                                        android:text="Niacinamide"
                                        android:textColor="@color/background_blue"
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/productImg2" />

                                    <ImageView
                                        android:id="@+id/productImg2"
                                        android:layout_width="131dp"
                                        android:layout_height="85dp"
                                        android:layout_marginTop="8dp"
                                        android:src="@drawable/product"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="160dp"
                                android:layout_height="120dp"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/custom_product">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="@font/poppinsbold"
                                        android:text="Niacinamide"
                                        android:textColor="@color/background_blue"
                                        android:textSize="12sp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/productImg3" />

                                    <ImageView
                                        android:id="@+id/productImg3"
                                        android:layout_width="131dp"
                                        android:layout_height="85dp"
                                        android:layout_marginTop="8dp"
                                        android:src="@drawable/product"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </FrameLayout>




                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:background="@drawable/custom_fav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="300dp"
            android:layout_marginStart="330dp"
            android:padding="8dp"
            android:src="@drawable/baseline_favorite_24"
            app:tint="@color/red" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>